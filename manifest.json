{
  "manifest_version": 3,
  "name": "BXM",
  "version": "1.0",
  "description": "Blind XSS Manager.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icon.png"
  }
}